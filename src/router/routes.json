{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/reset-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/prompt-password/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/courses": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view courses",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/assignments": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view assignments",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/calendar": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view calendar",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/students": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view students",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/study-timer": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to use study timer",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}